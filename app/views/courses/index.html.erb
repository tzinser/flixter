<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h2 class="text-center page-title">Learn something today</h2>
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <% @courses.each do |course| %>
      <br />
      <div class="courses">
        <h2 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h2>
        <br />
        <div class="col-sm-8 col-xs-12">
        	<%= course.description %>
        </div>
        <div class="col-sm-4 col-xs-12">
        	<%= link_to 'More Details...', course_path(course), :class => 'btn btn-primary btn-large pull-right' %>
        </div>
        <br class='clr'/>
        <br />
        <%= image_tag course.image, :class => 'img-responsive col-sm-10 col-sm-offset-1' %>
        <br class="clr" />
      </div>
      <br />     
    <% end %>
  </div>
</div>